{
    "version": "1.0.0",
    "name": "tapioca-yieldbox-strategies",
    "repository": "https://github.com/Tapioca-DAO/tapioca-yieldbox-strategies",
    "license": "MIT",
    "scripts": {
        "compile": "NODE_ENV=compile hardhat compile --quiet && yarn solhint",
        "solhint": "solhint contracts/**/*.sol --fix",
        "clean": "rm -rf ./cache && rm -rf ./artifacts && rm -rf ./.openzeppelin",
        "coverage": "NODE_ENV=compile hardhat compile --quiet && hardhat coverage --network hardhat",
        "contracts_size": "yarn compile && NODE_ENV=hardhat hardhat size-contracts",
        "typechain": "npx hardhat typechain",
        "test": "NODE_ENV=mainnet hardhat test",
        "sdk-gen": "npx hardhat exportSDK",
        "@comment deploy": "Deploy scripts",
        "deploy": "npx hardhat deploy",
        "deploy:mainnet": "npx hardhat deploy --network ethereum",
        "deploy:aave": "hardhat deploy --tags AaveStrategy --network",
        "deploy:balancer": "hardhat deploy --tags BalancerStrategy --network",
        "deploy:compound": "hardhat deploy --tags CompoundStrategy --network",
        "deploy:tricryptoLpGetter": "hardhat deploy --tags TricryptoLPGetter --network",
        "deploy:convexTricrypto": "hardhat deploy --tags ConvexTricryptoStrategy --network",
        "deploy:tricrypto": "hardhat deploy --tags TricryptoStrategy --network",
        "deploy:lido": "hardhat deploy --tags LidoEthStrategy --network",
        "deploy:stargate": "hardhat deploy --tags StargateStrategy --network",
        "deploy:yearn": "hardhat deploy --tags YearnStrategy --network",
        "@comment verify contracts": "Verify contracts",
        "verify_contract": "hardhat verify --network",
        "@formatters": "Formatters and code hints",
        "prettier:check": "prettier --check .",
        "prettier:fix": "prettier --write .",
        "prepare": "husky install",
        "merge_contracts": "sol-merger --export-plugin SPDXLicenseRemovePlugin \"./contracts/**/*.sol\" ./contracts-merged && node ./fixMergedContractsLicense.js"
    },
    "devDependencies": {
        "@boringcrypto/boring-solidity": "boringcrypto/BoringSolidity#78f4817d9c0d95fe9c45cd42e307ccd22cf5f4fc",
        "@ethersproject/abi": "^5.7.0",
        "@ethersproject/providers": "^5.7.0",
        "@nomicfoundation/hardhat-chai-matchers": "^1.0.3",
        "@nomicfoundation/hardhat-network-helpers": "^1.0.4",
        "@nomicfoundation/hardhat-toolbox": "^1.0.2",
        "@nomiclabs/hardhat-ethers": "^2.1.1",
        "@nomiclabs/hardhat-etherscan": "^3.1.0",
        "@openzeppelin/contracts": "^4.5.0",
        "@primitivefi/hardhat-dodoc": "~0.2.3",
        "@typechain/ethers-v5": "^10.1.0",
        "@typechain/hardhat": "^6.1.2",
        "@types/chai": "^4.2.22",
        "@types/lodash": "^4.14.185",
        "@types/mocha": "^9.0.0",
        "@types/node": "^16.11.11",
        "@typescript-eslint/eslint-plugin": "^5.11.0",
        "@typescript-eslint/parser": "^5.11.0",
        "chai": "^4.3.6",
        "dotenv": "^10.0.0",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "ethers": "^5.7.0",
        "hardhat": "^2.11.0",
        "hardhat-contract-sizer": "^2.5.1",
        "hardhat-deploy": "^0.9.6",
        "hardhat-gas-reporter": "^1.0.8",
        "http-server": "^14.0.0",
        "mocha": "^9.1.3",
        "prb-math": "^2.4.1",
        "prettier": "^2.5.1",
        "prettier-plugin-solidity": "^1.0.0-beta.19",
        "solc": "^0.8.4",
        "solhint": "^3.3.6",
        "solidity-coverage": "^0.7.21",
        "ts-node": "^10.7.0",
        "typechain": "^8.1.0",
        "typescript": "^4.4.3",
        "write-json-file": "4.3.0"
    },
    "dependencies": {
        "@nomiclabs/hardhat-vyper": "^3.0.1",
        "@uniswap/v3-core": "^1.0.1",
        "@uniswap/v3-periphery": "^1.4.3",
        "husky": "^8.0.1",
        "load-json-file": "^7.0.1",
        "lodash": "^4.17.21",
        "tapioca-sdk": "^1.1.12"
    }
}
